<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe Details</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/recipe.css">
  
</head>
<body>
  <div class="container mt-4">
    <a href="/" class="btn btn-primary mb-3">Back to Home</a>
    <div class="row">
      <div class="col-md-6">
        <div class="recipe-details">
          <div class="recipe-image">
            <img src="<%= recipe.thumbnail_url %>" alt="<%= recipe.name %>" class="img-fluid">
          </div>
          <div class="recipe-title">
            <h1 class="text-center mt-3 mb-4"><%= recipe.name %></h1>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="recipe-details p-4">
          <h2>Description:</h2>
          <p><%= recipe.description %></p>

          <h2>Ingredients:</h2>
          <ul>
            <% recipe.sections.forEach(section => { %>
              <% section.components.forEach(component => { %>
                <li><%= component.raw_text %></li>
              <% }); %>
            <% }); %>
          </ul>

          <h2>Instructions:</h2>
          <ol>
            <% recipe.instructions.forEach(instruction => { %>
              <li><%= instruction.display_text %></li>
            <% }); %>
          </ol>

          <h2>Nutrition:</h2>
          <ul>
            <li>Calories: <%= recipe.nutrition.calories %></li>
            <li>Carbohydrates: <%= recipe.nutrition.carbohydrates %>g</li>
            <li>Fat: <%= recipe.nutrition.fat %>g</li>
            <li>Fiber: <%= recipe.nutrition.fiber %>g</li>
            <li>Protein: <%= recipe.nutrition.protein %>g</li>
            <li>Sugar: <%= recipe.nutrition.sugar %>g</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

 
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>